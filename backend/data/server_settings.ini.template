[RADIO]
SERVER_CALLSIGN = (YOUR_SERVER_CALLSIGN, 0)

[TNC]
# Connection type: tcp or serial
CONNECTION_TYPE = tcp

# TCP settings (when CONNECTION_TYPE = tcp)
SERVER_HOST = localhost
SERVER_PORT = 8002

# Serial settings (when CONNECTION_TYPE = serial)
# Windows: COM3, COM4, etc.
# Linux: /dev/ttyUSB0, /dev/ttyACM0, etc.  
# macOS: /dev/cu.usbserial-*, /dev/cu.SLAB_USBtoUART, etc.
SERIAL_PORT = COM3
SERIAL_SPEED = 57600

[NETWORK]
# Server backend configuration (must match client)
# This overrides the main settings.ini if needed for server-specific setup
# backend_type = legacy

# VARA Server Settings (when using VARA backend)

[VARA]
# Server uses these ports to connect to local VARA instance
command_port = 8400
data_port = 8401
# If running VARA on different host:
# vara_host = localhost

# PTT Configuration (REQUIRED for VARA HF!)
use_ptt = true
ptt_serial_port = COM11
ptt_serial_baud = 38400
ptt_method = BOTH
pre_ptt_delay = 0.1
post_ptt_delay = 0.1
VARA_TEST_MODE = False

# Reticulum Server Settings (when using Reticulum backend)
[RETICULUM]
# Optional: Your server's grid square (metadata only, for directory listings)
# This is NOT used to create the server identity/destination
# Example: DM34, FN42, etc.
# server_grid = 

# Announce interval (seconds) - how often to broadcast server presence
# This allows multi-hop routing via RNodes that hear announcements
# Production recommended: 21600 (6 hours)
# Testing: 300 (5 minutes)
announce_interval = 21600

# Reticulum config directory (optional)
# If not specified, uses ~/.reticulum_server
# reticulum_config_dir =

# FLDIGI Server Settings (When using FLDIGI)
[FLDIGI]
# Server FLDIGI connection
# fldigi_host = localhost
# fldigi_port = 7343

[NOSTR]
RELAYS = wss://relay.nostr.band/,wss://relay.damus.io,wss://nos.lol, wss://relay.getalby.com/v1
