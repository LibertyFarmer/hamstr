[RADIO]
SERVER_CALLSIGN = (CALLSIGN, SSID)

[TNC]
# Connection type: tcp or serial
CONNECTION_TYPE = tcp

# TCP settings (when CONNECTION_TYPE = tcp)
SERVER_HOST = localhost
SERVER_PORT = 8002

# Serial settings (when CONNECTION_TYPE = serial)
# Windows: COM3, COM4, etc.
# Linux: /dev/ttyUSB0, /dev/ttyACM0, etc.
# macOS: /dev/cu.usbserial-*, /dev/cu.SLAB_USBtoUART, etc.
SERIAL_PORT = COM3
SERIAL_SPEED = 57600

[NOSTR]
RELAYS = wss://relay.nostr.band/,wss://relay.damus.io,wss://nos.lol, wss://relay.getalby.com/v1